.small-3.columns
.small-4.columns
  = form_tag '/login', :remote => true do
    = label_tag :email
    = text_field_tag :email, nil, :autofocus => true
    = label_tag :password
    = password_field_tag :password
    = button_to_function('Cancel', 'cancel_login_form()', :class => 'button round alert tiny')
    = submit_tag 'Login', :class => 'button tiny radius success'
.small-5.columns

