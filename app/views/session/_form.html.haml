.row
  .large-3.columns
  .large-6.columns
    = form_tag '/login' do
      = label_tag :email
      = text_field_tag :email, nil, :autofocus => true
      = label_tag :password
      = password_field_tag :password
      = link_to('Cancel', '#', :'data-clear-form' => true, id: 'cancel', :class => 'button tiny radius alert')
      = submit_tag 'Login', :class => 'button tiny radius success'
  .large-3.columns

